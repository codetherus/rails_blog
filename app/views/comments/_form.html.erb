<h3>Add Comment</h3>								
<%= form_for @post, @post.comments.build, html: {multipart: true} do |f| %>
	<p>
		<%= f.label :image %><br>
		<%= f.file_field(:image) %>
	</p>
	<p>
		<%= f.label :username %><br>
		<%= f.text_field(:username, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area(:body, {:class => 'form-control'})%>
	</p>
	<p>
		<%= f.submit({:class => 'btn btn-default'}) %>
	</p>
<% end %>